@model PlayerConfiguration

<div class="d-flex flex-column flex-fill overflow-auto">
    <div class="row m-0 p-0 mb-3">
        <div class="col-auto border-end">
            <h6 style="width: 75px">Interface</h6>
        </div>
        <div class="col">
            <div class="row">
                <div class="col">
                    <div>
                        @Html.LabelFor(x => x.AudioVisualizerBarCount, "Audio Visualizer Bar Count", new { @class = "form-label" })
                        @Html.TextBoxFor(x => x.AudioVisualizerBarCount, new { @class = "form-control form-control-sm", type = "number", step = "1", min = "64", max = "128" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row m-0 p-0 mb-3">
        <div class="col-auto border-end">
            <h6 style="width: 75px">Options</h6>
        </div>
        <div class="col">
            <div class="row">
                <div class="col">
                    <div class="mb-3">
                        @Html.LabelFor(x => x.SkipBackwardSeconds, "Skip Back (seconds)", new { @class = "form-label" })
                        @Html.TextBoxFor(x => x.SkipBackwardSeconds, new { @class = "form-control form-control-sm", type = "number", step = "1", min = "1" })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(x => x.SkipForwardSeconds, "Skip Ahead (seconds)", new { @class = "form-label" })
                        @Html.TextBoxFor(x => x.SkipForwardSeconds, new { @class = "form-control form-control-sm", type = "number", step = "1", min = "1" })
                    </div>
                    <div>
                        @Html.LabelFor(x => x.ProgressUpdateInterval, "Progress Update Interval (seconds)", new { @class = "form-label" })
                        @Html.TextBoxFor(x => x.ProgressUpdateInterval, new { @class = "form-control form-control-sm", type = "number", step = "1", min = "1" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row m-0 p-0">
        <div class="col-auto border-end">
            <h6 style="width: 75px">Actions</h6>
        </div>
        <div class="col">
            <div class="mb-3">
                <button id="@(HtmlControlsRepository.PlayerClearButtonId)" class="btn btn-sm btn-outline-danger" data-bs-title="Clear now playing" data-bs-tooltip="tooltip">
                    <i class="fa fa-eraser"></i>
                </button>
            </div>
        </div>
    </div>
</div>