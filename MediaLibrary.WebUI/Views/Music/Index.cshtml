@model MediaLibrary.WebUI.Models.MusicViewModel

@{
}

<div class="d-flex flex-column flex-fill" style="overflow-y: auto">
    <div>
        <h4>Music</h4>
        <div class="d-flex p-1" id="@(HtmlControlsRepository.MusicTabListId)">
            <div class="nav d-block flex-fill" role="tablist">
                <a class="btn btn-sm btn-outline-secondary" id="@(HtmlControlsRepository.AlbumsContainerId)-tab" data-bs-toggle="tab"
                   role="tab" title="@(nameof(Enums.MusicTabs.Albums))" data-music-tab="@(nameof(Enums.MusicTabs.Albums))"
                   data-bs-tooltip="tooltip" href="#@(HtmlControlsRepository.AlbumsContainerId)">
                    <i class="fa fa-compact-disc"></i>
                </a>
                <a class="btn btn-sm btn-outline-secondary" id="@(HtmlControlsRepository.ArtistsContainerId)-tab" data-bs-toggle="tab"
                   role="tab" title="@(nameof(Enums.MusicTabs.Artists))" data-music-tab="@(nameof(Enums.MusicTabs.Artists))"
                   data-bs-tooltip="tooltip" href="#@(HtmlControlsRepository.ArtistsContainerId)">
                    <i class="fa fa-user"></i>
                </a>
                <a class="btn btn-sm btn-outline-secondary" id="@(HtmlControlsRepository.SongsContainerId)-tab" data-bs-toggle="tab"
                   role="tab" title="@(nameof(Enums.MusicTabs.Songs))" data-music-tab="@(nameof(Enums.MusicTabs.Songs))"
                   data-bs-tooltip="tooltip" href="#@(HtmlControlsRepository.SongsContainerId)">
                    <i class="fa fa-music"></i>
                </a>
            </div>
            <div>
                <button type="button" class="btn btn-sm btn-outline-secondary @(HtmlControlsRepository.PlaybackContinueButtonsClass)"
                        data-bs-tooltip="tooltip" title="Continue playing" data-page="@Enums.MediaTypes.Song">
                    <i class="fa fa-play-circle"></i>
                </button>
                <button class="btn btn-sm btn-outline-secondary" data-music-action="search" data-bs-tooltip="tooltip" title="Search music"><i class="fa fa-search"></i></button>
                <button class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#@(HtmlControlsRepository.SettingsModalId)" data-bs-tooltip="tooltip" title="Settings">
                    <i class="fa fa-cog"></i>
                </button>
            </div>
        </div>
        <hr />
    </div>
    <div class="tab-content flex-fill" style="overflow-y: auto">
        <div class="tab-pane fade" id="@(HtmlControlsRepository.AlbumsContainerId)" role="tabpanel" data-load-url="@Url.Action("GetAlbums", "Music")"></div>
        <div class="tab-pane fade" id="@(HtmlControlsRepository.ArtistsContainerId)" role="tabpanel" data-load-url="@Url.Action("GetArtists", "Music")"></div>
        <div class="tab-pane fade" id="@(HtmlControlsRepository.SongsContainerId)" role="tabpanel" data-load-url="@Url.Action("GetSongs", "Music")"></div>
    </div>
</div>
