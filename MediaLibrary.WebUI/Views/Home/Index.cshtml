@model MediaLibrary.WebUI.Models.HomeViewModel

@{
    ViewBag.Title = string.Empty;
}

<div class="jumbotron">
    <h1 class="display-4">Welcome to KOW Moosic!</h1>
    <p class="lead"></p>
    <hr class="my-4">
    <div class="d-flex flex-row">
        <div class="flex-fill"></div>
        <div>
            <button class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#@(HtmlControlsRepository.SettingsModalId)" data-bs-tooltip="tooltip" title="Settings">
                <i class="fa fa-cog"></i>
            </button>
            <a class="btn btn-sm btn-outline-secondary" href="~/Transaction" target="_blank" data-bs-tooltip="tooltip" title="Transactions">
                <i class="fa fa-history"></i>
            </a>
        </div>
    </div>
</div>