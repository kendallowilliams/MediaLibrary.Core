@model MediaLibrary.WebUI.Models.PlayerViewModel

@{
    ViewBag.Title = "Player";
}

<div class="d-flex flex-column" style="flex: 1 1 auto; overflow-y: auto">
    <div style="flex: 0 0 auto">
        <div class="d-flex flex-row">
            <div style="flex: 0 0 auto"><h4>Now Playing</h4></div>
            <div style="flex: 1 1 auto; overflow-x: auto">
                <h4 id="@(HtmlControlsRepository.NowPlayingTitleId)" class="text-truncate"></h4>
            </div>
            <div class="p-1" style="flex: 0 0 auto">
                <button id="@(HtmlControlsRepository.PlayerAudioVisualizerButtonId)" class="btn btn-sm btn-outline-secondary @(Model.Configuration.AudioVisualizerEnabled ? "active" : string.Empty)"
                        data-tooltip="tooltip" title="Toggle audio visualizer">
                    <i class="fa fa-eye"></i>
                </button>
                <button id="@(HtmlControlsRepository.PlayerClearButtonId)" class="btn btn-sm btn-outline-danger" title="Clear now playing" data-tooltip="tooltip">
                    <i class="fa fa-trash"></i>
                </button>
            </div>
        </div>
        <hr />
    </div>
    <div class="card flex-fill" style="overflow-y: auto">
        <div class="card-body d-flex m-0 p-0 rounded-top flex-fill" style="overflow-y: auto">
            <div id="@(HtmlControlsRepository.PlayerItemsContainerId)" class="@(Model.Configuration.SelectedPlayerPage == Enums.PlayerPages.Index ? string.Empty : "d-none")" style="flex: 1 1 auto; overflow-y: auto"></div>
            <div id="@(HtmlControlsRepository.PlayerAudioContainerId)" style="display: flex; overflow-x: auto" class="@(Model.Configuration.SelectedPlayerPage == Enums.PlayerPages.Audio ? string.Empty : "d-none") flex-column flex-fill">
                <audio id="@(HtmlControlsRepository.MusicPlayerId)" class="d-none" @(Model.Configuration.Muted ? "muted=\"muted\"" : string.Empty) preload="metadata" data-player-page="@(Enums.PlayerPages.Audio)"></audio>
                <canvas id="@(HtmlControlsRepository.AudioVisualizerId)"></canvas>
            </div>
            <div id="@(HtmlControlsRepository.PlayerVideoContainerId)" style="background-color: black" class="embed-responsive @(Model.Configuration.SelectedPlayerPage == Enums.PlayerPages.Video ? string.Empty : "d-none") flex-fill">
                <video id="@(HtmlControlsRepository.VideoPlayerId)" @(Model.Configuration.Muted ? "muted=\"muted\"" : string.Empty) preload="metadata" data-player-page="@(Enums.PlayerPages.Video)" class="embed-responsive-item"></video>
            </div>
        </div>
        <div class="card-footer d-flex align-items-center">
            <div>
                <button class="btn btn-sm btn-outline-secondary d-none d-md-inline-block @(HtmlControlsRepository.PlayerPreviousButtonsClass)"><i class="fa fa-step-backward"></i></button>
                <button class="btn btn-sm btn-outline-secondary @(HtmlControlsRepository.PlayerBackwardButtonsClass)"><i class="fa fa-backward"></i></button>
                <button class="btn btn-outline-secondary @(HtmlControlsRepository.PlayerPlayButtonsClass)"><i class="fa fa-play"></i></button>
                <button class="btn btn-outline-secondary d-none @(HtmlControlsRepository.PlayerPauseButtonsClass)"><i class="fa fa-pause"></i></button>
                <button class="btn btn-sm btn-outline-secondary @(HtmlControlsRepository.PlayerForwardButtonsClass)"><i class="fa fa-forward"></i></button>
                <button class="btn btn-sm btn-outline-secondary d-none d-md-inline-block @(HtmlControlsRepository.PlayerNextButtonsClass)"><i class="fa fa-step-forward"></i></button>
            </div>
            <div class="d-flex mr-3 ml-3 flex-row align-items-center justify-content-center justify-content-lg-end flex-fill">
                <div class="mr-3 d-none d-lg-block @(HtmlControlsRepository.PlayerSlidersClass) flex-fill" data-slide-started="false"></div>
                <div class="text-muted @(HtmlControlsRepository.PlayerTimesClass) d-none d-lg-block">00:00/00:00</div>
                <div class="text-muted @(HtmlControlsRepository.PlayerShortTimesClass) d-lg-none">00:00</div>
            </div>
            <div>
                <button id="@(HtmlControlsRepository.PlayerPlaylistToggleButtonId)" class="btn btn-sm btn-outline-secondary @(Model.Configuration.SelectedPlayerPage == Enums.PlayerPages.Index ? "active" : string.Empty)">
                    <i class="fa fa-list-ul"></i>
                </button>
                <span class="d-none d-lg-inline-block">
                    <button class="btn btn-sm btn-outline-secondary @(HtmlControlsRepository.PlayerShuffleButtonsClass)"><i class="fa fa-random"></i></button>
                    <button data-repeat-type="@(nameof(Enums.RepeatTypes.None))" class="btn btn-sm btn-outline-secondary @(HtmlControlsRepository.PlayerRepeatButtonsClass) d-none">
                        <i class="fa fa-sync"></i>
                    </button>
                    <button data-repeat-type="@(nameof(Enums.RepeatTypes.RepeatOne))" class="btn btn-sm btn-outline-secondary active @(HtmlControlsRepository.PlayerRepeatOneButtonsClass) d-none">
                        <i class="fa fa-xs fa-sync"><sub>1</sub></i>
                    </button>
                    <button data-repeat-type="@(nameof(Enums.RepeatTypes.RepeatAll))" class="btn btn-sm btn-outline-secondary active @(HtmlControlsRepository.PlayerRepeatAllButtonsClass) d-none">
                        <i class="fa fa-sync"></i>
                    </button>
                </span>
                <span class="@(HtmlControlsRepository.PlayerVolumeContainersClass) d-none d-lg-inline-block">
                    <button class="btn btn-sm btn-outline-secondary @(HtmlControlsRepository.PlayerVolumeButtonsClass) d-none"
                            data-volume="0">
                        <i class="fa fa-volume-up"></i>
                    </button>
                    <button class="btn btn-sm btn-outline-secondary active @(HtmlControlsRepository.PlayerMuteButtonsClass) d-none">
                        <i class="fa fa-volume-mute"></i>
                    </button>
                </span>
                <button id="@(HtmlControlsRepository.PlayerFullscreenButtonId)" class="btn btn-sm btn-outline-secondary @(Model.Configuration.SelectedPlayerPage == Enums.PlayerPages.Video ? string.Empty : "d-none")">
                    <i class="fa fa-expand"></i>
                </button>
            </div>
        </div>
    </div>
</div>