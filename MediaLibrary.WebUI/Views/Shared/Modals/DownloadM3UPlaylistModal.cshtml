<div class="modal fade" id="@(HtmlControlsRepository.DownloadM3UPlaylistModalId)" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Download M3U Playlist</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Randomize&nbsp;<span id="modalM3UPlaylistTitle"></span>?
            </div>
            <div class="modal-footer">
                <button class="btn btn-outline-success" data-answer="yes">Yes</button>
                <button class="btn btn-outline-danger" data-answer="no">No</button>
            </div>
        </div>
    </div>
</div>