<div class="modal" id="@(HtmlControlsRepository.LoadingModalId)" tabindex="-1" role="dialog" aria-hidden="true" data-bs-backdrop="static"
     data-bs-keyboard="false">
    <div class="modal-header d-none">
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
    </div>
    <div class="modal-dialog modal-dialog-centered justify-content-center">
        <div class="spinner-border" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <div class="d-none">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#@(HtmlControlsRepository.LoadingModalId)"></button>
    </div>
</div>