<div class="modal" id="@(HtmlControlsRepository.LoadingModalId)" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static"
     data-keyboard="false">
    <div class="modal-header d-none">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-dialog modal-dialog-centered justify-content-center">
        <div class="spinner-border" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <div class="d-none">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#@(HtmlControlsRepository.LoadingModalId)"></button>
    </div>
</div>