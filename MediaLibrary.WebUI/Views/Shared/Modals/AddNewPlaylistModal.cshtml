@model MediaLibrary.WebUI.Models.PlaylistViewModel

<div class="modal fade" id="@(HtmlControlsRepository.NewPlaylistModalId)" tabindex="-1" role="dialog" aria-labelledby="modalNewPlaylistTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalNewPlaylistTitle">New Playlist</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="txtNewPlaylist">Playlist</label>
                    <input type="text" class="form-control" id="txtNewPlaylist" name="playlistName" placeholder="Playlist name">
                </div>
                <div class="form-group">
                    <label for="ddlPlaylistType">Type</label>
                    @Html.DropDownList("playlistType", Model.PlaylistTabItems, new { @class = "custom-select", id = "ddlPlaylistType", disabled = "disabled" })
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-primary" data-playlist-action="save" data-bs-tooltip="tooltip" title="Save playlist">Save</button>
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal" data-bs-tooltip="tooltip" title="Cancel">Cancel</button>
            </div>
        </div>
    </div>
</div>